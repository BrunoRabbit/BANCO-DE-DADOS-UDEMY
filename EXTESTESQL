CREATE TABLE LIVROS (
		NOMELIVRO VARCHAR(30),
		NOMEAUTOR VARCHAR(30),
		SEXO CHAR (1),
		PAGINAS VARCHAR (30),
		EDITORA VARCHAR (30),
		VALOR VARCHAR (30),
		ESTADO VARCHAR (100),
		ANO CHAR (4)

		DESC LIVROS;
   
