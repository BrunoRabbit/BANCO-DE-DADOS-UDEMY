/* ALIAS DE COLUNAS */

SELECT EMAIL ,NOME, SEXO, EMAIL FROM CLIENTE;

SELECT EMAIL, SEXO, NOME, ENDERECO FROM CLIENTE;

SELECT NOME, SEXO, EMAIL, ENDERECO FROM CLIENTE;

SELECT NOME, SEXO, EMAIL, ENDERECO, NOW() AS DATA_HORA FROM CLIENTE;


